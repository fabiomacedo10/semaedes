<p id="notice"><%= notice %></p>

<h1>Lista De Comentários</h1>

<table>
  <thead>
    <tr>
      <th>Nome Completo</th>
      <th>Comentário</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user_name %></td>
        <td><%= comment.body %></td>
        <td><%= link_to 'Mostrar', comment, :class => 'button hollow primary'  %></td>
        <td><%= link_to 'Editar', edit_comment_path(comment), :class => 'button hollow warning' %></td>
        <td><%= link_to 'Excluir', comment, method: :delete, data: { confirm: 'Você tem certeza?' }, :class => 'button hollow alert'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Comentário', new_comment_path, :class => 'button success expanded' %>
