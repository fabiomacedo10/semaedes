<p id="notice"><%= notice %></p>

<p>
  <strong>Título:</strong>
  <%= @issue.title %>
</p>

<p>
  <strong>Imagem:</strong>
  <%= image_tag(@issue.picture_url, :width => 600) if @issue.picture.present? %>
</p>

<p>
  <strong>Endereço:</strong>
  <%= @issue.address %>
</p>

<p>
  <strong>Descrição:</strong>
  <%= @issue.descriptiion %>
</p>

<p>
  <strong>Status:</strong>
  <%= @issue.status %>
</p>

